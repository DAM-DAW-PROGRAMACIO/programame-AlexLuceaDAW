package Easy;

import java.util.Scanner;

public class p340 {

	public static void main(String[] args) throws Exception{
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		
		int casos = sc.nextInt();
		int altura;
		int base;
		int cerillas;
		int superficie;
		
		while(casos > 0) {
			
			base = sc.nextInt();
			altura = sc.nextInt();
			
			superficie = base*2+altura*2;
			cerillas = superficie*2;
			
			/*cerillas = cuadrats*
					
					1*4 + 2*3+1*2 + 2*3+3*2
					
					1*4 + 2*3+1*2 + 2*3+3*2 + 2*3 + 5*2
				
			b*2*a*2	= superficie*2*/
			
			System.out.println(cerillas);		
			
			casos--;
			
			alt 2
			base 1  = 
			
			7 = 4 3
			
		}
	}

}
