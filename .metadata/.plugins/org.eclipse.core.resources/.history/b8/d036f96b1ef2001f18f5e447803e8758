package Easy;

import java.util.Scanner;

public class p407 {

	public static void main(String[] args) throws Exception{
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int c;
		int p;
		int t;
		int pos;
		
		c = sc.nextInt();
		p = sc.nextInt();
		t = sc.nextInt();
		
		while(!(c==0 && p ==0 && t ==0)) {
			
			pos = p + t; 
			
			if(pos > c) {
				pos = Math.abs(pos-c);
			}
			
			System.out.println(pos);
			
			c = sc.nextInt();
			p = sc.nextInt();
			t = sc.nextInt();
		}
		sc.close();
	}

}
